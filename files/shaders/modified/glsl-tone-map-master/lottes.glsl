vec3 toneMap(vec3 x)
{
#ifdef PER_CHANEL
    vec3 col = x;//= pow(x, vec3(2.2));
    col.x = lottes(col.x);
    col.y = lottes(col.y);
    col.z = lottes(col.z);
#else
    vec3 col = lottes(x);
#endif

    return  pow(col, vec3( 1.0 / 2.2 ));
}
